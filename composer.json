{
    "name": "soconnect/ruckus-client",
    "description": "Ruckus WLAN controller API client",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=5.6",
        "ext-json": "*",
        "guzzlehttp/guzzle": "~6.3"
    },
    "require-dev": {
        "allejo/php-vcr-sanitizer": "~1.0",
        "jakub-onderka/php-parallel-lint": "~1.0",
        "php-vcr/php-vcr": "~1.4",
        "php-vcr/phpunit-testlistener-vcr": "~3.2",
        "phpstan/phpstan": "~0.11",
        "phpstan/phpstan-phpunit": "~0.11",
        "phpunit/phpunit": "~7.5",
        "squizlabs/php_codesniffer": "~3.4",
        "vlucas/phpdotenv": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "SoConnect\\RuckusClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "post-install-cmd": [
            "git config core.hooksPath .githooks"
        ]
    }
}
